<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BusquedaTrabajo_paginaInicio_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BusquedaTrabajo_paginaInicio_.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-ligh">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="./img/Captura.PNG" alt="" width="120" height="120">
                </a>


                <h1>Portal de Busqueda de Trabajo</h1>
                <ul class="nav justify-content-center">


                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link btn " asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn " asp-controller="Home" asp-action="">Descripción de Trabajo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn " asp-controller="recursos" asp-action="Index">Recursos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn " asp-controller="detalles" asp-action="Index">Detalles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn " asp-controller="perfil" asp-action="Index">Perfil de Usuario</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn " asp-controller="InicioSesion" asp-action="Index">Iniciar Sesion/ Registrarse</a>
                            </li>
                        </ul>
                </ul>
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BusquedaTrabajo_paginaInicio_ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
