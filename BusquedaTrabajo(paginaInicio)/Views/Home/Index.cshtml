@{
    ViewData["Title"] = "Home Page";
}

    
    <main>
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col-8">
                    <img src="./img/sj.jpg" alt="...">
                </div>
                <div class="col-sm-4">
                    <div class="card-body">
                        <form class="d-flex mb-4">
                            <input class="form-control me-2" type="search" placeholder="Empezar Busqueda" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                        <p class="card-text text-center h1">Bienvenidos al sitio <br> Web de Busqueda de <br> Trabajo</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
        </div>
        <!-- Parte 1 -->
        <div class="container-fluid text-center p-3">
            <div class="row">
                <div class="col-md-6 ">
                    <h1 class="text-start p-3">Filtrado de Busqueda</h1>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Ubicacion</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-4 col-form-label">Tipo de Trabajo</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="inputPassword">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Salario $</label>
                        <div class="col-sm-5">
                            <input type="number" min="1" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-4 col-form-label">Nivel de Experiencia</label>
                        <div class="col-sm-5">
                            <input type="number" min="1" class="form-control" id="inputPassword">
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-3">Buscar</button>
                    </div>
                </div>
                <!-- Parte 2, I -->
                <div class="col-md-6 p-4">
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col">
                            <h5 class="card-title">Metricas de empleo</h5>
                            <div class="card">
                                <img src="./img/logo1.PNG" class="card-img-top" alt="..." width="100" height="120">
                            </div>
                        </div>
                        <div class="col">
                            <h5 class="card-title">Usuario</h5>
                            <div class="card">
                                <img src="./img/logo2.PNG" class="card-img-top" alt="..." width="100" height="120">
                            </div>
                        </div>
                        <div class="col">
                            <h5 class="card-title">Empleos publicados</h5>
                            <div class="card">
                                <img src="./img/logo3.PNG" class="card-img-top" alt="..." width="100" height="120">
                            </div>
                        </div>
                        <div class="col">
                            <h5 class="card-title">Solicitudes</h5>
                            <div class="card">
                                <img src="./img/logo4.PNG" class="card-img-top" alt="..." width="100" height="120">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center p-4 h1">
                    Marcas de empresas <br> Asociadas
                </div>
                <div>
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="./img/microsoft.jpg" class="d-block w-100" alt="..." width="600" height="400">
                            </div>
                            <div class="carousel-item">
                                <img src="./img/amazon.jpg" class="d-block w-100" alt="..." width="600" height="400">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <br>
                </div>

    </main>
