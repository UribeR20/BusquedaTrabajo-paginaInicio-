@{
    ViewData["Title"] = "Home Page";
}

    
    <main>
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col-8">
                    <img src="./img/sj.jpg" alt="...">
                </div>
                <div class="col-sm-4">
                    <div class="card-body">
                        <form class="d-flex mb-4">
                            <input class="form-control me-2" type="search" placeholder="Empezar Busqueda" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                        <p class="card-text text-center h1">Bienvenidos al sitio <br> Web de Busqueda de <br> Trabajo</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
        </div>
        <!-- Parte 1 -->
        <div class="container-fluid text-center p-3">
            <div class="row">
                <div class="col-md-6 ">
                    <h1 class="text-start p-3">Filtrado de Busqueda</h1>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Ubicacion</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-4 col-form-label">Tipo de Trabajo</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="inputPassword">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Salario $</label>
                        <div class="col-sm-5">
                            <input type="number" min="1" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="inputPassword" class="col-sm-4 col-form-label">Nivel de Experiencia</label>
                        <div class="col-sm-5">
                            <input type="number" min="1" class="form-control" id="inputPassword">
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-3">Buscar</button>
                    </div>
                </div>
                <!-- Parte 2, I -->
                <div class="col-md-6 p-4">
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col">
                        <a asp-controller="metricasEmpleo" asp-action="Index" class="btn btn-primary card-title text-decoration-none">Metrica de empresas</a>
                            <div class="card">
                                <img src="./img/logo1.PNG" class="card-img-top" alt="..." width="200" height="200">
                            </div>
                        </div>
                        <div class="col">
                            <a asp-controller="empleoPublicado" asp-action="Index" class="btn btn-primary card-title text-decoration-none">Empleos publicados</a>                            
                            <div class="card">
                                <img src="./img/logo3.PNG" class="card-img-top" alt="..." width="200" height="200">
                            </div>
                        </div>
                        <div class="col">
                            <a asp-controller="solicitud" asp-action="Index" class="btn btn-primary card-title text-decoration-none">Solicitudes</a>
                            <div class="card">
                                <img src="./img/logo4.PNG" class="card-img-top" alt="..." width="200" height="200">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center p-4 h1">
                    Marcas de empresas <br> Asociadas
                </div>
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                    @foreach (var empresa in (IEnumerable<dynamic>)ViewData["listadoDeMarcas"])
                    {
                        var index = ((IEnumerable<dynamic>)ViewData["listadoDeMarcas"]).ToList().IndexOf(empresa);
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@index" @(index == 0 ? "class=active" : "") aria-label="Slide @(index + 1)"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @{
                        int contador = 0;
                    }
                    @foreach (var empresa in (IEnumerable<dynamic>)ViewData["listadoDeMarcas"])
                    {

                        if (contador == 0)
                        {
                            <div class="carousel-item active">
                                <img src="/img/@empresa.imagen" class="d-block w-100" alt="Imagen">
                                
                            </div>
                            contador = contador + 1;
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="/img/@empresa.imagen" class="d-block w-100" alt="Imagen">
                                
                            </div>
                        }
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

    </main>
